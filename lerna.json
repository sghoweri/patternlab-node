{
  "lerna": "3.11.0",
  "packages": [
    "packages/cli",
    "packages/core",
    "packages/create",
    "packages/engines/*",
    "packages/live-server",
    "packages/plugins/*",
    "packages/starterkits/*",
    "packages/uikit-workshop/*"
  ],
  "version": "fixed",
  "command": {
    "init": {
      "exact": true
    },
    "bootstrap": {
      "hoist": [
        "tap",
        "eslin*",
        "husky",
        "prettier",
        "pretty-quick"
      ]
    },
    "publish": {
      "allowBranch": "master"
    }
  },
  "npmClientArgs": [
    "--registry=https://registry.npmjs.org/"
  ]
}
